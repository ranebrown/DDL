 	.syntax unified
 	.cpu cortex-m0
 	.align	2
 	.global	asm_fib
 	.thumb
 	.thumb_func

asm_fib:
 	push {r0, lr} 	/* store current argument and retun address */

check0:
 	cmp r0, #0 		/* check if n==0 */
 	bne check1		/* if n!=0 branch */
 	bx lr			/* if n==0 return 0 */

check1:
 	cmp r0, #1 		/* check if n==1 */
 	bne recursive	/* if n!=1 branch */
 	bx lr			/* if n==1 return 1 */

recursive:
	push {lr} 		/* store return address on stack */

	pop {pc} 		/* pop return address and go to that address */

exit:
